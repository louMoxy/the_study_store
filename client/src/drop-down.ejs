<div class="form-group row ">
    <div class="col">
        <label for="branchSelection" class="float-right pt-1">Select Branch: </label>
    </div>
    <div class="col">
            <select class="form-control" id="branchSelection">
                <% for (var i = 0; i < branches.length; i++ ) { %>
                    <option value=<%= branches[i].attributes.name %> <% if ( currentModel === branches[i].attributes.name) { %> selected <% } %>>
                        <%= branches[i].attributes.name %></option>
                <% }; %>
        </select>
    </div>
</div>